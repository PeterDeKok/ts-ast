{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [ "ES2020" ],
        "module": "ES2020",
        "moduleResolution": "Node",
        "outDir": "lib",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "strict": true,
        "target": "ES2020",
        "typeRoots": [
            "types",
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ]
}
